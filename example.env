# Environment variables for Apple Subscription Service
# Rename this file to .env and update the values for your environment

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# Security
# Generate a secure random key with: openssl rand -hex 32
SECRET_KEY=replace_with_secure_random_key
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# Database
# Format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/apple_subscriptions

# CORS settings
ALLOWED_ORIGINS=["http://localhost:8000", "http://localhost:3000"]

# Apple specific settings
APPLE_BUNDLE_ID=com.example.app
APPLE_ENVIRONMENT=Production  # Production or Sandbox

# App Store Connect API settings (optional)
# APPLE_APP_STORE_CONNECT_ISSUER_ID=your_issuer_id
# APPLE_APP_STORE_CONNECT_KEY_ID=your_key_id
# APPLE_APP_STORE_CONNECT_PRIVATE_KEY_PATH=path/to/private/key.p8
